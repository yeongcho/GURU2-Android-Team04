<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:id="@+id/layout_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground">

        <!-- 감정 이모지 -->
        <ImageView
            android:id="@+id/iv_emotion"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="감정"
            android:src="@drawable/emotion_joy" />

        <!-- 제목 -->
        <TextView
            android:id="@+id/tv_diary_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="좋아하는 영화를 본 날"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/handwriting_font"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- 날짜 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/handwriting_font" />

            <TextView
                android:id="@+id/tv_day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUN"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:fontFamily="@font/handwriting_font" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>