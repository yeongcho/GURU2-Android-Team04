<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    android:padding="24dp">

    <!-- 마스코트 캐릭터 영역 -->
    <ImageView
        android:id="@+id/iv_mascot"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:contentDescription="mascot"
        android:src="@drawable/img_start_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요, 처음이시군요."
        android:textSize="23sp"
        android:textColor="@color/white"
        android:fontFamily="@font/seoulhangang_eb"
        android:layout_marginTop="-12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_mascot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 버튼 그룹 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="로그인 / 회원가입"
            android:textSize="16sp"
            android:fontFamily="@font/nanumsquare_eb"
            android:backgroundTint="#6E79DB"
            android:textColor="@color/white"
            android:elevation="4dp"
            app:cornerRadius="50dp"
            app:strokeWidth="0.7dp"
            app:strokeColor="@color/btn_line_navy"/>

        <!-- 비회원 시작-->
        <Button
            android:id="@+id/btn_guest_start"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="비회원 시작"
            android:textSize="16sp"
            android:fontFamily="@font/nanumsquare_eb"
            android:backgroundTint="@color/secondary_pink"
            android:textColor="@color/white"
            android:elevation="4dp"
            app:cornerRadius="50dp"
            app:strokeWidth="0.7dp"
            app:strokeColor="@color/btn_line_navy"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>