<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFD8C1">

    <!-- 일기 모아보기 (주차별 리스트 목록함)-->
    <!-- 이전 달 -->
    <ImageView
        android:id="@+id/btnPrevMonth"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 월 표시 -->
    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="01월 2026"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/nanumsquare_eb"
        app:layout_constraintBottom_toBottomOf="@id/btnPrevMonth"
        app:layout_constraintEnd_toStartOf="@id/btnNextMonth"
        app:layout_constraintStart_toEndOf="@id/btnPrevMonth"
        app:layout_constraintTop_toTopOf="@id/btnPrevMonth" />

    <!-- 다음 달 -->
    <ImageView
        android:id="@+id/btnNextMonth"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnPrevMonth" />

    <!-- 탭 -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPrevMonth">

        <TextView
            android:id="@+id/btnTabSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="요약"
            android:fontFamily="@font/nanumsquare_eb"
            android:textColor="#829586"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btnTabCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="캘린더"
            android:textColor="#829586"
            android:fontFamily="@font/nanumsquare_eb"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btnTabList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리스트"
            android:fontFamily="@font/nanumsquare_eb"
            android:textColor="#0B2F22"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 월 스티커 -->
    <ImageView
        android:id="@+id/ivMonthSticker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/month_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

    <!-- 주 선택 -->
    <LinearLayout
        android:id="@+id/layoutWeekSelector"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/bg_week_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMonthSticker">

        <ImageView
            android:id="@+id/btnPrevWeek"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:rotation="180"
            android:src="@drawable/ic_week_arrow_24" />

        <TextView
            android:id="@+id/tvWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="넷째 주"
            android:fontFamily="@font/nanumsquare_eb"
            android:textColor="#345141"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnNextWeek"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_week_arrow_24" />
    </LinearLayout>

    <!-- 공유 버튼 -->
    <ImageView
        android:id="@+id/btnShare"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"
        android:padding="8dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@id/layoutWeekSelector"
        app:layout_constraintStart_toEndOf="@id/layoutWeekSelector"
        app:layout_constraintTop_toTopOf="@id/layoutWeekSelector"
        app:layout_constraintVertical_bias="0.4" />

    <!-- 일기 목록 컨테이너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rvDiaryList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutWeekSelector">

        <!-- 첫번째 일기 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_diary_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#E3EAE1"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layout_card_content_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- 감정 이모지 -->
                <ImageView
                    android:id="@+id/iv_emotion_1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/emotion_joy" />

                <!-- 제목 -->
                <TextView
                    android:id="@+id/tv_diary_title_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="좋아하는 영화를 본 날"
                    android:textSize="18sp"
                    android:textColor="#6D9779"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- 날짜 -->
                <LinearLayout
                    android:id="@+id/layout_date_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_day_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19"
                        android:textSize="32sp"
                        android:textColor="#3B3E3C"
                        android:fontFamily="@font/nanumsquare_eb" />

                    <TextView
                        android:id="@+id/tv_day_of_week_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MON"
                        android:textSize="17sp"
                        android:textColor="#3B3E3C"
                        android:gravity="center"
                        android:fontFamily="@font/nanumsquare_eb" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 두번째 일기 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_diary_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#E3EAE1"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/card_diary_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layout_card_content_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- 감정 이모지 -->
                <ImageView
                    android:id="@+id/iv_emotion_2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/emotion_joy" />

                <!-- 제목 -->
                <TextView
                    android:id="@+id/tv_diary_title_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="봉사활동을 하고 온 날"
                    android:textSize="18sp"
                    android:textColor="#6D9779"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- 날짜 -->
                <LinearLayout
                    android:id="@+id/layout_date_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_day_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="32sp"
                        android:textColor="#3B3E3C"
                        android:fontFamily="@font/nanumsquare_eb" />

                    <TextView
                        android:id="@+id/tv_day_of_week_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tue"
                        android:textSize="17sp"
                        android:textColor="#3B3E3C"
                        android:gravity="center"
                        android:fontFamily="@font/nanumsquare_eb" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
