<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_start">

    <!-- 로그인 화면 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- 로그인 타이틀 -->
        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인을 진행할게요."
            android:textSize="26sp"
            android:textColor="@color/white"
            android:fontFamily="@font/seoulhangang_eb"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 계정(아이디)"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumsquarez_b"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_login_title"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 아이디 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="이메일을 입력해주세요."
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#B3D9D9D9"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="3dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_id_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#AA90F9"
                android:fontFamily="@font/nanumsquarez_b"
                android:textColorHint="#AA90F9" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumsquarez_b"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_id"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 비밀번호 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="바밀번호를 입력해주세요."
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#B3D9D9D9"
            app:boxStrokeColor="#FFFFFF"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="3dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:passwordToggleEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/tv_password_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nanumsquarez_b"
                android:textColor="#AA90F9"
                android:textColorHint="#AA90F9"/>

        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_width="170dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/til_password"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_star_outline_24"
            app:layout_constraintTop_toBottomOf="@id/til_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="170dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/til_password"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 로그인 버튼 -->
        <!-- 버튼 그룹 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="로그인"
            android:textSize="16sp"
            android:fontFamily="@font/nanumsquare_eb"
            android:backgroundTint="#999ECB"
            android:textColor="@color/white"
            android:elevation="4dp"
            app:cornerRadius="50dp"
            app:strokeWidth="0.7dp"
            app:strokeColor="@color/btn_line_navy"/>

        <!-- 회원가입 버튼 -->
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="회원가입"
            android:textSize="16sp"
            android:fontFamily="@font/nanumsquare_eb"
            android:backgroundTint="#4A57CD"
            android:textColor="@color/white"
            android:elevation="4dp"
            app:cornerRadius="50dp"
            app:strokeWidth="0.7dp"
            app:strokeColor="@color/btn_line_navy"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>